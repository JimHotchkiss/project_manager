<div>
    <div>
    <%= form_for(:user) do |f| %>
        <div class="
            sm:m-auto 
            sm:mt-8 
            mx-3 
            my-3 
            max-w-lg  
            bg-gray-100 
            border 
            border-gray-300 
            p-7">
            <div>
                <h1 class="text-xl font-semibold  mb-5">Login</h1>
                <p class="text-red-600"><%= flash[:error] %>
            </div>
            <div class="
                sm:m-auto 
                sm:mt-8 
                max-w-lg  
                bg-gray-100 
                border-gray-300">


                <div class="flex flex-col mb-3">
                    <%= f.label :username %>
                    <%= f.text_field :username, :class => "mb-3 h-9 focus:outline-none" %>
                </div>

                <div class="flex flex-col mb-3">
                    <%= f.label :email %>
                    <%= f.text_field :email, :class => "mb-3 h-9 focus:outline-none" %>
                </div>

                <div class="flex flex-col mb-3">
                    <%= f.label :password %>
                    <%= f.password_field :password, :class => "mb-3 h-9 focus:outline-none" %>
                </div>

            <!-- last div-->
                <div>
                    <%= f.submit 'Login', :class => 'w-full 
                                                border 
                                                hover:border-black 
                                                transition-all 
                                                hover:bg-yellow-500 
                                                mt-5 
                                                px-5 
                                                py-2 
                                                h-12
                                                rounded-md 
                                                cursor-pointer 
                                                focus:outline-none 
                                                bg-yellow-400' %>
                </div>
            </div>
            <!-- Facebook Google login-->
            <div class="flex items-center mt-4 justify-center">
                <span class="text-gray-400">OR</span>
            </div>
            <div class="max-w-lg 
                        flex 
                        flex-col 
                        justify-center 
                        mt-3">
                <button class="uppercase 
                                h-12 
                                text-white 
                                w-full 
                                rounded 
                                bg-blue-800 
                                hover:bg-blue-900
                                focus:outline-none 
                                transition-all"><i class="fab fa-github mr-2"></i>Github</button> 
                <button class="uppercase 
                                h-12 
                                mt-3 
                                text-white 
                                w-full 
                                rounded 
                                bg-red-700 
                                hover:bg-red-900
                                focus:outline-none 
                                transition-all"><i class="fab fa-google mr-2"></i>Google</button>
            </div>
        <!-- End Facebook-->
        </div>

    <% end %>

  
    </div>
</div>