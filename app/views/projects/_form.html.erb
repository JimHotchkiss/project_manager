<div>
    <%= form_for(@project) do |f| %>
        <div class="
            sm:m-auto 
            sm:mt-24 
            mx-3 
            my-3 
            max-w-lg  
            bg-gray-100 
            border 
            border-gray-300 
            p-7">
        <div>
            <h1 class="text-xl font-semibold  mb-5">Create a Project</h1>
        </div>
        <div class=" flex flex-col mb-3">
            <%= f.label :title,  :class => "mb-1" %>
            <%= f.text_field :title, :class => "h-9 focus:outline-none" %>
        </div>
        <div class=" flex flex-col mb-3">
            <%= f.label :description, :class => "mb-1" %>
            <%= f.text_area :description, :class => "focus:outline-none" %>
        </div>

        <!-- List of Technologies -->
        <div class="">Technologies</div>
        <div class="mb-3 max-w-md p-1  flex flex-row">
            <%= f.collection_check_boxes(:technology_ids, Technology.all, :id, :name) do |t| %>
                <div class="flex flex-row mt-1"
                    <%= t.label class:"" do%>
                    <div class="mt-0.5 pl-3">    
                        <%=t.check_box class:"form-checkbox h-5 w-5 text-gray-600" %>
                    </div>
                    <div class="ml-1.5 text-yellow-500">    
                        <%=t.text%>
                    </div>
                </div>
                <% end %>
            <% end %>  
        </div>

        <!-- Create Technology-->
        <div class=" flex flex-col mb-3">
            <p class= "mb-1">Add a Technology</p>
        </div>


        <div class=" flex flex-col mb-3">
            <%= f.label :number_of_developers, :class => "mb-1" %>
            <%= f.text_field :number_of_developers, :class => "h-9 focus:outline-none" %>
        </div>
        <div>
            <%= f.submit 'Submit Project', :class => 'border hover:border-black transition-all hover:bg-yellow-500 mt-5 px-5 py-2 rounded-md cursor-pointer focus:outline-none bg-yellow-400' %>
        </div>
    </div>
    <% end %>
</div>