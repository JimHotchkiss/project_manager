<div>
    <% @projects.each do |project| %>
        <div class="sm:m-auto sm:mt-5 max-w-xl mt-8 mx-3 my-3 bg-white  rounded-lg border border-gray-300">
            <h1 class="p-4 font-semibold">Project Title: <span class="font-light"><%= project.title%></span></h1>
            <p class="p-4 font-semibold">Project Description: <span class="font-light"><%= project.description%></span></p>
            <p class="p-4 font-semibold">Number of Developers: <span class="font-light"><%= project.number_of_developers%></span></p>

            <!-- Display Technologies -->
            <p class="ml-4 font-semibold">Project Technologies:</p>
            <div class="ml-4 mb-2 max-w-md">
                <% project.technologies.each do |technology|  %>
                    <p class="pl-4 pt-1 font-light"><%= technology.name%></p>
                <% end %>
            </div>
            <div class="flex justify-between">
                <button class="m-3 
                           mb-5
                           px-6 
                           py-1 
                           bg-yellow-400
                           rounded
                           focus:outline-none 
                           border
                           hover:border-black
                           transition-all
                           hover:bg-yellow-500">Join</button>
                <button class="m-3 
                           mb-5
                           px-6 
                           py-1 
                           bg-yellow-400
                           rounded
                           focus:outline-none 
                           border
                           hover:border-black
                           transition-all
                           hover:bg-yellow-500">Details</button>
            </div>
        </div>
    <% end %>
</div>