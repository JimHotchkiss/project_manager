<div>
    <% @projects.each do |project| %>
        <div class="sm:m-auto sm:mt-5 max-w-xl mt-8 mx-3 my-3 bg-white  rounded-lg border border-gray-300">
            <h1 class="p-4 font-semibold">Project Title: <span class="font-light"><%= project.title%></span></h1>
            <p class="p-4 font-semibold">Project Description: <span class="font-light"><%= truncate(project.description, length: 140)%></span></p>
            <p class="p-4 font-semibold">Number of Developers: <span class="font-light"><%= project.number_of_developers%></span></p>
            <div class="flex justify-between">
                <button class="m-3 
                           mb-5
                           px-6 
                           py-1 
                           bg-yellow-400
                           rounded
                           focus:outline-none 
                           border
                           hover:border-black
                           transition-all
                           hover:bg-yellow-500">Join</button>
                <%= button_to "Details", project_path(project), :class => "
                           m-3 
                           mb-5
                           px-6 
                           py-1 
                           bg-yellow-400
                           rounded
                           focus:outline-none 
                           border
                           hover:border-black
                           transition-all
                           hover:bg-yellow-500", :method => :get %>
                
            </div>
        </div>
    <% end %>
</div>