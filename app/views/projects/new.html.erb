
<div>
    <%= form_for(@project) do |f| %>
        <div class="
            sm:m-auto 
            sm:mt-40 mx-3 
            my-3 max-w-lg  
            bg-gray-100 
            border 
            border-gray-300 
            p-7">
        <div>
            <h1 class="text-xl font-semibold  mb-5">Create a Project</h1>
        </div>
        <div class=" flex flex-col mb-3">
            <%= f.label :title,  :class => "mb-1" %>
            <%= f.text_field :title, :class => "focus:outline-none" %>
        </div>
        <div class=" flex flex-col mb-3">
            <%= f.label :description, :class => "mb-1" %>
            <%= f.text_field :description, :class => "focus:outline-none" %>
        </div>
        <div class=" flex flex-col mb-3">
            <%= f.label :number_of_developers, :class => "mb-1" %>
            <%= f.text_field :number_of_developers, :class => "focus:outline-none" %>
        </div>
        <div>
            <%= f.submit 'Submit Project', :class => 'border hover:border-black mt-5 px-5 py-2 rounded-md cursor-pointer focus:outline-none bg-red-400' %>
        </div>
    </div>
    <% end %>
</div>
